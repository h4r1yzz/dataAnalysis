{
    "mcpServers": {
        "dataflow": {
            "command": "python",
            "args": [
                "/Users/harry/Desktop/dataAnalysis3/scout/my_mcp/local_servers/dataflow.py"
            ],
            "transport": "stdio"
        },
        "datalysis": {
            "command": "python",
            "args": [
                "/Users/harry/Desktop/dataAnalysis3/scout/my_mcp/local_servers/datalysis_mcp.py"
            ],
            "transport": "stdio"
        },
        "filesystem": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-filesystem",
                "${MCP_FILESYSTEM_DIR}"
            ],
            "transport": "stdio"
        },
        "git": {
            "command": "uvx",
            "args": [
                "mcp-server-git"
            ],
            "transport": "stdio"
        },
        "github": {
            "command": "docker",
            "args": [
                "run",
                "-i",
                "--rm",
                "-e",
                "GITHUB_PERSONAL_ACCESS_TOKEN",
                "ghcr.io/github/github-mcp-server"
            ],
            "env": {
                "GITHUB_PERSONAL_ACCESS_TOKEN": "${MCP_GITHUB_PAT}"
            },
            "transport": "stdio"
        }
    }
}